<select @bind="selectedValue" @attributes="Attributes">
    @foreach (var (value, text) in Values)
    {
        <option value="@value">@text</option>
    }
</select>

@code {

    [Parameter]
    public Dictionary<string, object> Attributes { get; set; }

    [Parameter]
    public Dictionary<object, string> Values { get; set; }

    [Parameter]
    public EventCallback<string> OnValueChange { get; set; }

    private string selectedValue;

    private async Task HandleValueChange(ChangeEventArgs e)
    {
        selectedValue = e.Value?.ToString();
        await OnValueChange.InvokeAsync(selectedValue);
    }

}
